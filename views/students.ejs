<%- include('partials/header') %>

<div class="container-fluid" style="margin-top: 56px;">
    <div class="row">
        <%- include('partials/sidebar') %>
        
        <div class="col-lg-10">
            <div class="main-content">
                <!-- Flash Messages -->
                <% if (flash) { %>
                    <div class="alert alert-<%= flash.type %> alert-dismissible fade show" role="alert">
                        <%= flash.message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                
                <!-- Page Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h3 mb-0">Data Siswa</h1>
                        <p class="text-muted">Kelola data siswa dan tracking pembayaran</p>
                    </div>
                    <div>
                        <a href="/students/create" class="btn btn-primary">
                            <i class="bi bi-person-plus"></i>
                            Tambah Siswa
                        </a>
                    </div>
                </div>
                
                <!-- Search -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="GET" class="row g-3">
                            <div class="col-md-8">
                                <label class="form-label">Cari Siswa</label>
                                <input type="text" class="form-control" name="search" value="<%= search %>" placeholder="Cari nama, kelas, atau nomor telepon...">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-search"></i>
                                        Cari
                                    </button>
                                    <a href="/students" class="btn btn-outline-secondary">
                                        <i class="bi bi-arrow-clockwise"></i>
                                        Reset
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Students Grid -->
                <% if (students.length > 0) { %>
                    <div class="row">
                        <% students.forEach(student => { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <div class="flex-grow-1">
                                                <h5 class="card-title mb-1"><%= student.name %></h5>
                                                <p class="text-muted small mb-2">
                                                    <i class="bi bi-mortarboard"></i>
                                                    <%= student.class_name %>
                                                </p>
                                            </div>
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="dropdown">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li><a class="dropdown-item" href="/students/<%= student.id %>">
                                                        <i class="bi bi-eye"></i> Detail
                                                    </a></li>
                                                    <li><a class="dropdown-item" href="/students/<%= student.id %>/edit">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a></li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li><a class="dropdown-item text-danger" href="#" onclick="deleteStudent(<%= student.id %>)">
                                                        <i class="bi bi-trash"></i> Hapus
                                                    </a></li>
                                                </ul>
                                            </div>
                                        </div>
                                        
                                        <div class="row text-center mb-3">
                                            <div class="col-6">
                                                <div class="border-end">
                                                    <h4 class="text-success mb-0">Rp <%= (student.total_paid || 0).toLocaleString('id-ID') %></h4>
                                                    <small class="text-muted">Total Bayar</small>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <h4 class="text-primary mb-0"><%= student.payment_count || 0 %></h4>
                                                <small class="text-muted">Transaksi</small>
                                            </div>
                                        </div>
                                        
                                        <% if (student.phone) { %>
                                            <p class="small text-muted mb-1">
                                                <i class="bi bi-telephone"></i>
                                                <%= student.phone %>
                                            </p>
                                        <% } %>
                                        
                                        <% if (student.email) { %>
                                            <p class="small text-muted mb-3">
                                                <i class="bi bi-envelope"></i>
                                                <%= student.email %>
                                            </p>
                                        <% } %>
                                        
                                        <div class="d-flex gap-2">
                                            <button class="btn btn-sm btn-primary flex-fill" onclick="payIuran(<%= student.id %>, '<%= student.name %>')">
                                                <i class="bi bi-wallet2"></i>
                                                Bayar Iuran
                                            </button>
                                            <a href="/students/<%= student.id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="card-footer text-muted small">
                                        <i class="bi bi-calendar"></i>
                                        Bergabung: <%= new Date(student.created_at).toLocaleDateString('id-ID') %>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-people fs-1 text-muted"></i>
                            <h5 class="text-muted mt-3">Tidak ada siswa</h5>
                            <p class="text-muted">
                                <% if (search) { %>
                                    Tidak ada siswa yang sesuai dengan pencarian "<%= search %>"
                                <% } else { %>
                                    Belum ada data siswa yang terdaftar
                                <% } %>
                            </p>
                            <a href="/students/create" class="btn btn-primary">
                                <i class="bi bi-person-plus"></i>
                                Tambah Siswa Pertama
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Pay Iuran Modal -->
<div class="modal fade" id="payIuranModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bayar Iuran</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="payIuranForm">
                    <input type="hidden" id="studentId" name="student_id">
                    <div class="mb-3">
                        <label class="form-label">Siswa</label>
                        <input type="text" class="form-control" id="studentName" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Jumlah Iuran</label>
                        <input type="number" class="form-control" name="amount" value="5000" required>
                        <div class="form-text">Default: Rp 5.000 (iuran mingguan)</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                <button type="button" class="btn btn-primary" onclick="submitPayIuran()">Bayar Iuran</button>
            </div>
        </div>
    </div>
</div>

<% 
const pageScript = `
<script>
async function deleteStudent(id) {
    if (!confirm('Yakin ingin menghapus siswa ini? Semua transaksi terkait akan tetap ada.')) {
        return;
    }
    
    try {
        const response = await fetch('/students/' + id, {
            method: 'DELETE',
            headers: {
                'Accept': 'application/json'
            }
        });
        
        const data = await response.json();
        
        if (data.success) {
            showAlert('Siswa berhasil dihapus', 'success');
            setTimeout(() => location.reload(), 1000);
        } else {
            showAlert('Gagal menghapus siswa: ' + data.message, 'danger');
        }
    } catch (error) {
        console.error('Error:', error);
        showAlert('Terjadi kesalahan saat menghapus siswa', 'danger');
    }
}

function payIuran(studentId, studentName) {
    document.getElementById('studentId').value = studentId;
    document.getElementById('studentName').value = studentName;
    
    const modal = new bootstrap.Modal(document.getElementById('payIuranModal'));
    modal.show();
}

async function submitPayIuran() {
    const form = document.getElementById('payIuranForm');
    const formData = new FormData(form);
    
    try {
        const response = await fetch('/api/pay-weekly', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(Object.fromEntries(formData))
        });
        
        const data = await response.json();
        
        if (data.success) {
            showAlert('Iuran berhasil dibayar', 'success');
            bootstrap.Modal.getInstance(document.getElementById('payIuranModal')).hide();
            setTimeout(() => location.reload(), 1000);
        } else {
            showAlert('Gagal membayar iuran: ' + data.message, 'danger');
        }
    } catch (error) {
        console.error('Error:', error);
        showAlert('Terjadi kesalahan saat membayar iuran', 'danger');
    }
}
</script>
`;
%>

<%- include('partials/footer', { pageScript }) %>
