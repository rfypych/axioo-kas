<%- include('partials/header') %>

<div class="container-fluid" style="margin-top: 56px;">
    <div class="row">
        <%- include('partials/sidebar') %>
        
        <div class="col-lg-10">
            <div class="main-content">
                <!-- Flash Messages -->
                <% if (flash) { %>
                    <div class="alert alert-<%= flash.type %> alert-dismissible fade show" role="alert">
                        <%= flash.message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                
                <!-- Page Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h3 mb-0">Iuran Mingguan</h1>
                        <p class="text-muted">Tracking pembayaran iuran mingguan siswa</p>
                    </div>
                    <div>
                        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#bulkPaymentModal">
                            <i class="bi bi-cash-stack"></i>
                            Bayar Massal
                        </button>
                    </div>
                </div>
                
                <!-- Weekly Summary -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card stats-card bg-primary">
                            <div class="card-body text-center">
                                <i class="bi bi-wallet2 fs-1 mb-2"></i>
                                <h3>Rp <%= weeklyCollection.weekly_total.toLocaleString('id-ID') %></h3>
                                <p class="mb-0">Total Terkumpul</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card stats-card bg-success">
                            <div class="card-body text-center">
                                <i class="bi bi-check-circle fs-1 mb-2"></i>
                                <h3><%= weeklyPayments.filter(s => s.status === 'paid').length %></h3>
                                <p class="mb-0">Sudah Bayar</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card stats-card bg-warning">
                            <div class="card-body text-center">
                                <i class="bi bi-clock fs-1 mb-2"></i>
                                <h3><%= weeklyPayments.filter(s => s.status === 'pending').length %></h3>
                                <p class="mb-0">Belum Bayar</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card stats-card bg-info">
                            <div class="card-body text-center">
                                <i class="bi bi-percent fs-1 mb-2"></i>
                                <h3><%= Math.round((weeklyPayments.filter(s => s.status === 'paid').length / weeklyPayments.length) * 100) %>%</h3>
                                <p class="mb-0">Progress</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Progress Bar -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="mb-0">Progress Pembayaran Mingguan</h6>
                            <span class="badge bg-primary">
                                <%= weeklyPayments.filter(s => s.status === 'paid').length %>/<%= weeklyPayments.length %> siswa
                            </span>
                        </div>
                        <div class="progress" style="height: 15px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" 
                                 role="progressbar" 
                                 style="width: <%= Math.round((weeklyPayments.filter(s => s.status === 'paid').length / weeklyPayments.length) * 100) %>%">
                                <%= Math.round((weeklyPayments.filter(s => s.status === 'paid').length / weeklyPayments.length) * 100) %>%
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Payment Status Cards -->
                <div class="row">
                    <% weeklyPayments.forEach(student => { %>
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card h-100 <%= student.status === 'paid' ? 'border-success' : 'border-warning' %>">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div class="flex-grow-1">
                                            <h6 class="card-title mb-1"><%= student.name %></h6>
                                            <small class="text-muted">ID: <%= student.id %></small>
                                        </div>
                                        <div>
                                            <% if (student.status === 'paid') { %>
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i>
                                                    Lunas
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-clock"></i>
                                                    Pending
                                                </span>
                                            <% } %>
                                        </div>
                                    </div>
                                    
                                    <div class="text-center mb-3">
                                        <h4 class="<%= student.status === 'paid' ? 'text-success' : 'text-warning' %>">
                                            Rp <%= student.weekly_paid.toLocaleString('id-ID') %>
                                        </h4>
                                        <small class="text-muted">dari Rp 5.000</small>
                                    </div>
                                    
                                    <% if (student.weekly_paid > 0 && student.weekly_paid < 5000) { %>
                                        <div class="progress mb-3" style="height: 8px;">
                                            <div class="progress-bar bg-warning" 
                                                 style="width: <%= (student.weekly_paid / 5000) * 100 %>%"></div>
                                        </div>
                                    <% } %>
                                    
                                    <% if (student.status === 'pending') { %>
                                        <button class="btn btn-primary btn-sm w-100" 
                                                onclick="payWeekly(<%= student.id %>, '<%= student.name %>', <%= 5000 - student.weekly_paid %>)">
                                            <i class="bi bi-wallet2"></i>
                                            Bayar Iuran
                                        </button>
                                    <% } else { %>
                                        <button class="btn btn-outline-success btn-sm w-100" disabled>
                                            <i class="bi bi-check-circle"></i>
                                            Sudah Lunas
                                        </button>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Pay Weekly Modal -->
<div class="modal fade" id="payWeeklyModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bayar Iuran Mingguan</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="payWeeklyForm">
                    <input type="hidden" id="studentId" name="student_id">
                    <div class="mb-3">
                        <label class="form-label">Siswa</label>
                        <input type="text" class="form-control" id="studentName" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Jumlah Pembayaran</label>
                        <input type="number" class="form-control" id="paymentAmount" name="amount" required>
                        <div class="form-text">Masukkan jumlah yang akan dibayar</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                <button type="button" class="btn btn-primary" onclick="submitPayWeekly()">Bayar</button>
            </div>
        </div>
    </div>
</div>

<!-- Bulk Payment Modal -->
<div class="modal fade" id="bulkPaymentModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bayar Iuran Massal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted mb-3">Pilih siswa yang akan dibayar iurannya:</p>
                
                <div class="mb-3">
                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="selectAllPending()">
                        Pilih Semua yang Belum Bayar
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="clearSelection()">
                        Bersihkan Pilihan
                    </button>
                </div>
                
                <form id="bulkPaymentForm">
                    <div class="row">
                        <% weeklyPayments.filter(s => s.status === 'pending').forEach(student => { %>
                            <div class="col-md-6 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="students" value="<%= student.id %>" id="student<%= student.id %>">
                                    <label class="form-check-label" for="student<%= student.id %>">
                                        <%= student.name %>
                                        <small class="text-muted">(Kurang: Rp <%= (5000 - student.weekly_paid).toLocaleString('id-ID') %>)</small>
                                    </label>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    
                    <hr>
                    
                    <div class="mb-3">
                        <label class="form-label">Jumlah per Siswa</label>
                        <input type="number" class="form-control" name="amount" value="5000" required>
                        <div class="form-text">Jumlah yang akan dibayar untuk setiap siswa yang dipilih</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                <button type="button" class="btn btn-success" onclick="submitBulkPayment()">Bayar Massal</button>
            </div>
        </div>
    </div>
</div>

<% 
const pageScript = `
<script>
function payWeekly(studentId, studentName, remainingAmount) {
    document.getElementById('studentId').value = studentId;
    document.getElementById('studentName').value = studentName;
    document.getElementById('paymentAmount').value = remainingAmount;
    
    const modal = new bootstrap.Modal(document.getElementById('payWeeklyModal'));
    modal.show();
}

async function submitPayWeekly() {
    const form = document.getElementById('payWeeklyForm');
    const formData = new FormData(form);
    
    try {
        const response = await fetch('/api/pay-weekly', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(Object.fromEntries(formData))
        });
        
        const data = await response.json();
        
        if (data.success) {
            showAlert('Iuran berhasil dibayar', 'success');
            bootstrap.Modal.getInstance(document.getElementById('payWeeklyModal')).hide();
            setTimeout(() => location.reload(), 1000);
        } else {
            showAlert('Gagal membayar iuran: ' + data.message, 'danger');
        }
    } catch (error) {
        console.error('Error:', error);
        showAlert('Terjadi kesalahan saat membayar iuran', 'danger');
    }
}

function selectAllPending() {
    const checkboxes = document.querySelectorAll('input[name="students"]');
    checkboxes.forEach(cb => cb.checked = true);
}

function clearSelection() {
    const checkboxes = document.querySelectorAll('input[name="students"]');
    checkboxes.forEach(cb => cb.checked = false);
}

async function submitBulkPayment() {
    const form = document.getElementById('bulkPaymentForm');
    const formData = new FormData(form);
    const selectedStudents = formData.getAll('students');
    const amount = formData.get('amount');
    
    if (selectedStudents.length === 0) {
        showAlert('Pilih minimal satu siswa', 'warning');
        return;
    }
    
    if (!confirm(\`Yakin ingin membayar iuran untuk \${selectedStudents.length} siswa dengan jumlah Rp \${parseInt(amount).toLocaleString('id-ID')} per siswa?\`)) {
        return;
    }
    
    try {
        let successCount = 0;
        let failCount = 0;
        
        for (const studentId of selectedStudents) {
            const response = await fetch('/api/pay-weekly', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    student_id: studentId,
                    amount: parseInt(amount)
                })
            });
            
            const data = await response.json();
            if (data.success) {
                successCount++;
            } else {
                failCount++;
            }
        }
        
        if (successCount > 0) {
            showAlert(\`Berhasil membayar iuran untuk \${successCount} siswa\`, 'success');
        }
        
        if (failCount > 0) {
            showAlert(\`Gagal membayar iuran untuk \${failCount} siswa\`, 'warning');
        }
        
        bootstrap.Modal.getInstance(document.getElementById('bulkPaymentModal')).hide();
        setTimeout(() => location.reload(), 1000);
        
    } catch (error) {
        console.error('Error:', error);
        showAlert('Terjadi kesalahan saat membayar iuran massal', 'danger');
    }
}
</script>
`;
%>

<%- include('partials/footer', { pageScript }) %>
